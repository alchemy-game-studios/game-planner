# CanonKiln Environment Variables
# Copy to .env and fill in values

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# OpenAI (for AI-constrained generation)
# Leave blank to run in mock mode (random templates, no API calls)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Stripe (for subscription gating)
# Leave blank to run in mock mode (all plans return FREE)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CREATOR_PRICE_ID=price_...
STRIPE_STUDIO_PRICE_ID=price_...

# App URL (used for Stripe redirect URLs)
APP_URL=http://localhost:3000

# Development overrides
# Override subscription plan for local testing (FREE | CREATOR | STUDIO)
DEV_PLAN_OVERRIDE=FREE
# Stripe customer ID for portal testing
DEV_STRIPE_CUSTOMER_ID=
